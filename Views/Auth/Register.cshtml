@model WebApp.Models.RegisterForm

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Create Account - Alpha";
}

<form asp-action="Register" asp-controller="Auth" method="post" class="form" enctype="multipart/form-data">
    <div class="center-screen">
        <div class="surface temp1">
            <h2>Create Account</h2>

            <div class="social-signup">
                <button type="button" class="btn-google">
                    <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google icon" />
                    Sign Up with Google
                </button>
                <div class="divider"><span>OR</span></div>
            </div>

            <div class="form-group">
                <div class="field-label-group">
                <label asp-for="FullName"></label>
                    <span asp-validation-for="FullName"></span>
                </div>
                <input asp-for="FullName" name="FullName" />
            </div>

            <div class="form-group">
                <div class="field-label-group">
                <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input asp-for="Email" name="Email" />
            </div>

            <div class="form-group">
                <div class="field-label-group">
                <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <input asp-for="Password" name="Password" />
            </div>

            <div class="form-group">
                <div class="field-label-group">
                <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for ="ConfirmPassword" ></span>
                </div>
                <input asp-for="ConfirmPassword"/>
            </div>


            <div class="form-group">
                <div class="checkbox">
                    <span asp-validation-for="TermsAndConditions"></span>
                    <input asp-for="TermsAndConditions" />
                    <label asp-for="TermsAndConditions">I accept the <a href="#">Terms & Conditions</a></label>
            </div>
            </div>

            
                <button class="btn btn-blue" type="submit">Create Account</button>


            <div class="login-link">
                <span>Already have an account?</span>
                <a asp-action="Login" asp-controller="Auth">Log In</a>
            </div>
        </div>
   </div>
</form>
@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}




