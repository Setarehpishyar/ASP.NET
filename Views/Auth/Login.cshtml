@model WebApp.Models.LoginForm

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Login";
}

<div class="center-screen">
    <div class="surface temp">

        <form asp-action="Login" method="post" asp-controller="Auth" enctype="multipart/form-data" novalidate>
            <h2>Login</h2>

            <div class="social-login">
                <a class="btn-google" href="/Auth/ExternalLogin?provider=Google&returnUrl=/">
                    <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google icon" />
                    Login with Google
                </a>

                <div class="divider">
                    <span>OR</span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="options-row">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-blue">Login</button>
        </form>

        <p class="signup-link">
            Don’t have an account?
            <a asp-controller="Auth" asp-action="Register">Sign up</a>
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/validate.js" asp-append-version="true"></script>
}



