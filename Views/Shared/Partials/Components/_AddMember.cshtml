<div class="modal" id="memberModal" style="display: none;">
    <div class="modal-content">
        <span class="close-btn" id="closeMemberModal">&times;</span>
        <h3>New Member</h3>

        <div class="upload-box1">
            <div class="upload-circle1" id="uploadTriggerMember" style="cursor: pointer;">📷</div>
            <input type="file" id="projectImageInputMember" accept="image/*" style="display: none;">
            <img id="projectImagePreviewMember" class="preview-image1" style="display: none; max-width: 100px; max-height: 100px; margin-top: 10px;">
        </div>

        <form>
            <div class="date-fields">
                <div>
                    <label>First Name</label>
                    <input type="text" placeholder="Your first name" />
                </div>
                <div>
                    <label>Last Name</label>
                    <input type="text" placeholder="Your last name" />
                </div>
            </div>

            <label>Email</label>
            <input type="email" id="memberEmail" placeholder="Your email address" />

            <label>Phone</label>
            <input type="tel" placeholder="Your phone number" />

            <label>Job Title</label>
            <input type="text" placeholder="Your job title" />

            <label>Address</label>
            <input type="text" placeholder="Your address" />

            <div class="date-fields">
                <label>Date of Birth</label><br>

                <div class="dob-container">
                    <div>
                        <select id="dob-day">
                            <option value="" selected disabled>Day</option>

                        </select>
                    </div>

                    <div>
                        <select id="dob-month">
                            <option value="" selected disabled>Months</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>

                    <div>
                        <select id="dob-year">
                            <option value="" selected disabled>Year</option>

                        </select>
                    </div>
                </div>
            </div>

            <button type="button" class="create-btn" id="addBtn">Add contact</button>
        </form>
    </div>
</div>
